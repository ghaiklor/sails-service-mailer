{
  "name": "sails-service-mailer",
  "description": "Service for Sails framework with Mailer feautres",
  "main": "lib/index.js",
  "author": "ghaiklor",
  "license": "MIT",
  "scripts": {
    "compile": "babel src --out-dir lib",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "prepublish": "npm run compile",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "babel-node ./node_modules/.bin/isparta cover _mocha"
  },
  "bugs": {
    "url": "https://github.com/ghaiklor/sails-service-mailer/issues"
  },
  "homepage": "https://github.com/ghaiklor/sails-service-mailer#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghaiklor/sails-service-mailer.git"
  },
  "keywords": [
    "sails",
    "service",
    "mailer"
  ],
  "dependencies": {
    "lodash": "3.10.1",
    "nodemailer": "1.9.0",
    "nodemailer-direct-transport": "1.1.0",
    "nodemailer-sendgrid-transport": "0.2.0",
    "nodemailer-sendmail-transport": "1.0.0",
    "nodemailer-ses-transport": "1.3.0",
    "nodemailer-smtp-transport": "1.0.4",
    "nodemailer-stub-transport": "1.0.0"
  },
  "devDependencies": {
    "babel": "6.1.5",
    "chai": "3.4.1",
    "coveralls": "2.11.4",
    "cz-conventional-changelog": "1.1.4",
    "isparta": "3.5.3",
    "mocha": "2.3.3",
    "semantic-release": "4.3.5",
    "sinon": "1.17.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
